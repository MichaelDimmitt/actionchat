<h2 data-room-id='<%= @room.id %>'><%= @room.name %></h2>
<div class = 'room-list'>
  <%= render 'rooms' %>
  <!-- <%#= link_to 'Edit', edit_room_path(@room) %> |
  <%#= link_to 'Back', rooms_path %> -->
  <%= link_to 'Create a New Room', new_room_path %>
  <div class="private_messages">
    <h6>Private Messages</h6>
  </div>
</div>
<%= render 'messages' %>
<%= render 'userlist' %>
<div class = 'new-message'>
  <%= form_for([@room, @room.messages.build], remote: true, html: {class: 'form-inline message-form'}) do |f| %>
    <%= f.text_area :text, class: 'form-control', rows: 1 %>
    <%= f.submit 'submit', class: 'btn btn-primary' %>
  <% end %>
  <%= button_tag 'Clear', class: 'btn btn-default', id: 'clear-btn' %>

</div> <!-- /new-message -->